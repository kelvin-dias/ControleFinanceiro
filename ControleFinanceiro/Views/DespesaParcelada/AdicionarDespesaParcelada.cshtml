@model Modelo.Entidades.DespesaDia

@{
    ViewBag.Title = "AdicionarDespesaParcelada";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4 offset-md-4 mt-50">
            <div class="block">
                <div class="block-header block-header-default">
                    <h4 class="block-title" align="center">Despesa Parcelada</h4>
                </div>
                <div class="block-content">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-12">
                            <i class="fas fa-edit"></i>
                            @Html.LabelFor(model => model.NomeItem, htmlAttributes: new { @class = "control-label col-md-8 p-0" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.NomeItem, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NomeItem, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <i class="fas fa-donate"></i>
                            @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-8 p-0" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control valores" } })
                            @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <i class="far fa-calendar-alt"></i>
                            @Html.LabelFor(model => model.DataHora, htmlAttributes: new { @class = "control-label col-md-2 p-0" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.DataHora, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DataHora, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success btn-lg btn-block">Adicionar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

